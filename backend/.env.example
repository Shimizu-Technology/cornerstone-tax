# Cornerstone Backend Environment Variables
# Copy this to .env and fill in your values

# ===========================================
# DATABASE
# ===========================================
# Development: Uses local PostgreSQL (no config needed)
# Production: Set DATABASE_URL to your Neon connection string
# DATABASE_URL=postgresql://user:password@ep-xxx.neon.tech/cornerstone_db

# ===========================================
# AUTHENTICATION (Clerk)
# ===========================================
# Get your JWKS URL from: Clerk Dashboard > API Keys > Advanced > JWKS Public Key URL
# Format: https://your-app.clerk.accounts.dev/.well-known/jwks.json
CLERK_JWKS_URL=https://your-app.clerk.accounts.dev/.well-known/jwks.json

# ===========================================
# FILE STORAGE (AWS S3)
# ===========================================
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_REGION=us-west-2
AWS_BUCKET_NAME=cornerstone-documents

# ===========================================
# EMAIL (Resend)
# ===========================================
RESEND_API_KEY=re_your_api_key

# ===========================================
# SMS (ClickSend)
# ===========================================
CLICKSEND_USERNAME=your_username
CLICKSEND_API_KEY=your_api_key

# ===========================================
# FRONTEND (CORS)
# ===========================================
# Required in production/staging. Used to configure allowed CORS origins.
# FRONTEND_URL=https://your-frontend-domain.com

# ===========================================
# RAILS
# ===========================================
# Generate with: rails secret
SECRET_KEY_BASE=generate_with_rails_secret

# Active Record Encryption (for encrypting sensitive data like bank info)
# Generate with: bin/rails db:encryption:init
ACTIVE_RECORD_ENCRYPTION_PRIMARY_KEY=your_32_char_primary_key_here
ACTIVE_RECORD_ENCRYPTION_DETERMINISTIC_KEY=your_32_char_deterministic_key
ACTIVE_RECORD_ENCRYPTION_KEY_DERIVATION_SALT=your_32_char_salt_here
